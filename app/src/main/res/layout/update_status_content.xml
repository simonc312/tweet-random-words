<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/item_timeline"
            android:id="@+id/item_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_tweet_bubble"
            android:layout_margin="@dimen/default_padding"/>


        <RelativeLayout
            android:id="@+id/rl_tweet_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            android:padding="@dimen/default_padding"
            android:background="@drawable/update_status_background"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/btn_send">

            <EditText
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="140"
                android:maxLines="3"
                android:hint="@string/update_status_hint"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/tv_char_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_status"
                android:text="0/140"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_pencil"
            android:text="@string/tweet"
            android:layout_margin="@dimen/default_padding"
            android:layout_alignParentBottom="true"
            />
    </LinearLayout>

</ScrollView>